<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quiz.MainActivity">
    <Button
        android:id="@+id/button"
        android:layout_width="132dp"
        android:layout_height="49dp"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="67dp"
        android:onClick="onClick"
        android:text="Play again!"
        app:layout_constraintLeft_toLeftOf="@+id/YourScore"
        app:layout_constraintTop_toBottomOf="@+id/YourScore"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/Highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest score: "
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="129dp"
        android:layout_marginTop="172dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="129dp" />

    <TextView
        android:id="@+id/YourScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score: "
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/Highscore"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/Highscore" />

    <Button
        android:id="@+id/answers"
        android:layout_width="132dp"
        android:layout_height="49dp"
        android:text="Answers"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="answersClick"
        tools:layout_editor_absoluteY="354dp" />
</android.support.constraint.ConstraintLayout>

